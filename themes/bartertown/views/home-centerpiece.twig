{% for post in lead_story %} {# there is only one of these, but we can keep using "post" for clarity #}
<div class="lead-story">
    <div class="media single-img">
        <span data-picture data-alt="Image description goes here">
            <span data-src="{{post.thumbnail.src}}"></span>
            <span data-src="{{post.thumbnail.src|resize(640,480)}}" data-media="(min-device-pixel-ratio: 2.0)"></span>
            <span data-src="{{post.thumbnail.src|resize(480,320)}}" data-media="(min-width: 321px)"></span>
            <span data-src="{{post.thumbnail.src|resize(640,960)}}" data-media="(min-width: 321px) and (min-device-pixel-ratio: 2.0)"></span>
            <span data-src="{{post.thumbnail.src|resize(640,480)}}" data-media="(min-width: 481px)"></span>
            <span data-src="{{post.thumbnail.src|resize(1280,960)}}" data-media="(min-width: 481px) and (min-device-pixel-ratio: 2.0)"></span>
            <span data-src="{{post.thumbnail.src|resize(800,600)}}" data-media="(min-width: 641px)"></span>
            <span data-src="{{post.thumbnail.src|resize(1600,1200)}}" data-media="(min-width: 641px) and (min-device-pixel-ratio: 2.0)"></span>
            <span data-src="{{post.thumbnail.src|resize(640,480)}}" data-media="(min-width: 769px)"></span>
            <span data-src="{{post.thumbnail.src|resize(1280,960)}}" data-media="(min-width: 769px) and (min-device-pixel-ratio: 2.0)"></span>
            <span data-src="{{post.thumbnail.src|resize(480,320)}}" data-media="(min-width: 960px)"></span>
            <span data-src="{{post.thumbnail.src|resize(960,640)}}" data-media="(min-width: 960px) and (min-device-pixel-ratio: 2.0)"></span>
            <span data-src="{{post.thumbnail.src|resize(640,480)}}" data-media="(min-width: 1029px)"></span>
            <span data-src="{{post.thumbnail.src|resize(1280,960)}}" data-media="(min-width: 1029px) and (min-device-pixel-ratio: 2.0)"></span>
            <span data-src="{{post.thumbnail.src|resize(800,600)}}" data-media="(min-width: 1241px)"></span>
            <span data-src="{{post.thumbnail.src|resize(1600,1200)}}" data-media="(min-width: 1241px) and (min-device-pixel-ratio: 2.0)"></span>
            <!-- Fallback content for non-JS browsers. Same img src as the initial, unqualified source element. -->
            <noscript>
                <img src="{{post.thumbnail.src|resize(320,24)}}" alt="{{post.title}}">
            </noscript>
        </span>
    </div> <!-- .media -->
    <h2><a href="{{post.permalink}}">{{post.title}}</a></h2>
    <p class="excerpt">{{post.post_excerpt}}<span class="timestamp">{{post.post_date|time_ago}}</span></p>
{% endfor %}
    {% if secondary_lead_story|length == 1 %}
    </div> <!-- .lead-story -->
    {% for post in secondary_lead_story %}
    <div class="second-lead-story">
        <h3><a href="{{post.permalink}}">{{post.title}}</a></h3>
        <p class="excerpt">{{post.post_excerpt}}</p>
        <div class="meta">
            <p class="source">{{post.author}}<span class="divider">|</span><time datetime="{{post.post_date}}" class="timestamp">{{post.post_date|time_ago}}</time></p>
            <p class="comment-bug"><span class="glyphicon glyphicon-comment"></span><span class="sr-only">Comments: </span><a href="{{post.permalink}}">{{post.comment_count}}</a></p>
        </div>
    </div> <!-- .second-lead-story -->
    {% endfor %}
    {% else %}
    <div class="link-list">
        <h5>{{related_stories_heading}}</h5>
        <ul>
{% for post in related_stories %}
            <li><a href="{{post.permalink}}"><strong>{{post.tag}}</strong>{{post.title}}</a></li>
            {% endfor %}
        </ul>
    </div>
</div> <!-- .lead-story -->
    {% endif %}