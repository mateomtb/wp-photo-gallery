				                          </li>
				                        </ul>  <!-- .high-low -->
			                   		</div> <!-- .today-temp -->
		                   		{% endif %}
                    		{% endfor %}
                    <div class="forecast">
                        <ul>
                        	{% for fc in get_fc.DailyForecasts|slice(1,7) %}
	                            <li>
	                                <p class="day">{{ fc.Date|date('l') }}</p>
