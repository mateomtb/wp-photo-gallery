		    <noscript>
		        <img src="http://placehold.it/320x24" alt="Image description goes here">
		    </noscript>
		</span>
	</div> <!-- .media -->

	<h2><a href="{{post.link}}">{{post.post_title}}</a></h2>
	<p class="excerpt">{{post.post_excerpt}} <span class="photographer">The Associated Press</span></p>
	<div class="meta">
		<p class="source">{{post.Publication}}<span class="divider">|</span><time datetime="2012-03-05T20:53Z" class="timestamp">{{post.post_date|time_ago}}</time></p>
		<p class="comment-bug"><span class="glyphicon glyphicon-comment"></span><span class="sr-only">Comments: </span><a href="{{post.link}}#comments">{{post.comment_count}}</a></p>
	</div>
</div> <!-- .lead-story -->
